{% extends 'base.html.twig' %}
{% block title %}Hello SeanceController!{% endblock %}

{% block body %}
    

    <div id="modalAddSeance" style="display: none;">
        {{ form_start(formAddSeance)}}
            {{ form_row(formAddSeance.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom de la séance'}, 'label': false}) }}
            {{ form_row(formAddSeance.submit, {'attr': {'class': 'btn btn-primary'}}) }}
        {{ form_end(formAddSeance) }}

    </div>

    <div id='seanceContainer'>
    <h1>Vos Séance</h1>
    {# cet div permet de contenir les séances et l'ajout des séances #}

        {# ces lignes de code créerons des card des séances #}
        <div class='cardContainer'>
            {# ces lignes de code créerons une card qui permet d'ajouter une séance#}
            <a id="ajouterSeance">
                <div class='cardSeance'>
                    <h3>Ajouter Seance</h3>
                </div>
            </a>

            {% for seance in seances %}
            <a href="{{ path('show_seance',{'id': seance.id}) }}">
                <div class='cardSeance'>
                    {{ seance.nom }}
                </div>
            </a>
            {% endfor %}

            {% for seancesFav in app.user.SeanceFavoris %}
            <a href="{{ path('show_seance',{'id': seancesFav.id}) }}">
                <div class='cardSeance'>
                    <h3>{{seancesFav.nom}}</h3>
                </div>
            </a> 
            {% endfor %} 
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="{{ asset('js/script.js') }}"></script>
{% endblock %}
