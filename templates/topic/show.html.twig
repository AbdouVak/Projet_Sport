{% extends 'base.html.twig' %}

{% block title %}Hello TopicController!{% endblock %}

{% block body %}
    <h1>{{topic.titre}}</h1>
    <div class='topic'>
        <div class='topicHeader'>
            <div class='topicInfo'>{{topic.user.pseudo}}</div>
            <div class='topicInfo'>{{topic.dateCreation|date('Y-m-d H:i:s')}}</div>
        </div>
        <div class='content'>
            {{topic.contenue}}
        </div>
    </div>

    {% for post in posts %}
