        <div class='topicHeader'>
            <div class='topicInfo'>{{post.user.pseudo}}</div>
            <div class='topicInfo'>{{post.dateCreation|date('Y-m-d H:i:s')}}</div>
        </div>
        <div class='content'>
            {{post.contenue}}
        </div>
    </div>
    {% endfor %}
    
