{% extends 'base.html.twig' %}
{% block head %}
    {{ parent() }}
    <meta name="description" content="
    Rejoignez notre communauté passionnée de musculation! 
    Découvrez des séances d'entraînement inspirantes, échangez des conseils, 
    et <strong>créez vos propres séances personnalisées</strong>. 
    Partagez-les avec d'autres passionnés, 
    repoussez vos limites ensemble et atteignons nos objectifs de fitness. 
    Rejoignez-nous maintenant et sculptez le meilleur de vous-même!">
{% endblock %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div id="registerContainer">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        
        <div id="margin-left-right">
            <h1>Inscription</h1>
            <div id="registerForm">
        
                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.email, {
                        'attr': {'class': 'field-register'},
                        'label': false,
                        'placeholder': 'Votre placeholder pour l\'email'
                    }) }}
                    {{ form_row(registrationForm.pseudo, {
                        'attr': {'class': 'field-register'},
                        'label': false,
                        'placeholder': 'Votre placeholder pour le pseudo'
                    }) }}
                    {{ form_row(registrationForm.plainPassword, {
                        'label': false,
                        'attr': {'class': 'field-register'},
                        'placeholder': 'Votre placeholder pour le mot de passe'
                    }) }}
                    {{ form_row(registrationForm.agreeTerms) }}

                    {{ form_row(registrationForm.captcha)}}

                    {{ form_row(registrationForm.submit, {
                        'attr': {'class': 'input-register'}
                    }) }}
                {{ form_end(registrationForm) }}

            <div>
        <div>
    <div>
{% endblock %}
 